<resources>

    <!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="default_selector">@drawable/default_item_selector</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="primary_text_color">@color/primary_text_dark</item>
        <item name="secondary_text_color">@color/secondary_text_dark</item>
        <item name="hint_text_color">@color/hint_text_dark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


	<style name="DrawerLayout">
		<item name="android:id">@id/drawer_layout</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:fitsSystemWindows">true</item>
	</style>

	<style name="CoordinatorLayout">
		<item name="android:id">@id/coordinator_layout</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:fitsSystemWindows">true</item>
	</style>

	<style name="AppBarLayout">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="elevation">0dp</item>
	</style>

	<style name="FloatingActionButton">
		<item name="android:id">@id/fab</item>
		<item name="android:src">@drawable/ic_menu_camera</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_gravity">bottom|right</item>
		<item name="android:layout_margin">16dp</item>
		<item name="fabSize">normal</item>
	</style>

	<style name="RecyclerView">
		<item name="android:id">@id/recycler_view</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="LayoutContent">
		<item name="android:orientation">vertical</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="layout_behavior">@string/appbar_scrolling_view_behavior</item>
	</style>

</resources>
